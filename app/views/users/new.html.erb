<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>

<p>
<%= f.label :email %>
<%= f.text_field :email %>
</p>

<p>
<%= f.label :password %>
<%= f.password_field :password %>
</p>

<p>
<%= f.submit %>
</p>

<% end %>
